# Server Configuration
PORT=3000
NODE_ENV=development
TZ=UTC

# MongoDB Connection
MONGOURI=mongodb://localhost:27017/linkedin-scraper

# Authentication
ACCESS_TOKEN_SECRET=replace_with_secure_random_string
ACCESS_TOKEN_LIFE=7d
REFRESH_TOKEN_SECRET=replace_with_another_secure_random_string
REFRESH_TOKEN_LIFE=30d
ENCRYPTION_KEY=replace_with_32_character_string

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# LinkedIn Scraping
ENABLE_HEADLESS=true
ENABLE_CRON=true

# ChromeDriver Configuration
# Uncomment to override default path detection
# CHROMEDRIVER_PATH=/path/to/your/chromedriver

# Logging
LOG_LEVEL=info  # debug, info, warn, error

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASS=your_password
SMTP_FROM=noreply@example.com
